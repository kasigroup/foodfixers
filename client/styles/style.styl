@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i|Oswald');

#root {
  text-align: center;
  margin: 0 auto;
  width: 100%;
  max-width: 600px;
  color: #1a1a1a;
  font-family: 'Open Sans', sans-serif;
}

.title {
  font-size: 3.5em;
  font-family: 'Oswald', sans-serif;
}

.align-center {
  text-align: center;
}

.profile-name {
  font-size: 21px;
}

#main {
  padding-top: 50px;
  padding-left: 25px;
  padding-right: 25px;
}

.productItem {
  text-align: left;
  padding: 20px 0px;
  margin-bottom: 10px;

  a {
      color: inherit;
  }

}

.example-enter {
  opacity: 0.01;
}

.example-enter.example-enter-active {
  opacity: 1;
  transition: opacity 500ms ease-in;
}

.example-leave {
  opacity: 1;
}

.example-leave.example-leave-active {
  opacity: 0.01;
  transition: opacity 300ms ease-in;
}

.product-single-header {
    background: black;
    background-image: url("http://i.imgur.com/UEL3Q8q.jpg");
    background-size: cover;
    background-position: center center;
    height: 250px;
    margin-bottom: 50px;
}

.locations {
  margin-top: 25px;
}

.productItem a:hover {
  text-decoration: none;
}

.logo {
  font-family: 'Oswald', sans-serif;
  padding-top: 50px;
  padding-bottom: 50px;
  font-size: 3.5em;
}

.ReduxForm {
  max-width: 400px;
  width: 100%;
  margin: 0 auto;
}

.loginToRegBtn {
    text-transform: uppercase;
    color:#9a9a9a;
    border-bottom: 1px dotted #9a9a9a;
    cursor: pointer;
    font-size: 0.8em;
}

.loginToRegBtn:hover {
  color: #9a9a9a;
  opacity: 0.9;
  text-decoration: none;
}


.form-input {
  outline: none;
  border: 1px solid #e5e5e5;
  border-radius: 3px;
  color: #7f7f7f;
  width: 100%;
  padding: 0.65em 0.95em;
  margin-bottom: 15px;
}

.form-head {

  padding-bottom: 25px;

  h3 {
    font-size: 3.5em;
    font-family: 'Oswald', sans-serif;
  }
  p {
    font-size: 1.1em;
    font-style: italic;
    font-weight: lighter;
  }
}

.main-btn {
  margin-top: 10px;
  width: 100%;
  border-radius: 2px;
  padding-top: 15px;
  padding-bottom: 15px;
  background: #1a1a1a;
  color:white;
  text-transform: uppercase;
  font-size: 15px;
  letter-spacing: 0.1em;
  font-family: 'Oswald', sans-serif;
}

.main-btn:hover {
  opacity: 0.8;
}

.btn-45 {
  width: 45%;
  min-width: 250px;
  margin: 10px;
}

footer {
  height: 100px;
  background: white;
}



.top-nav {
  position: fixed;
  background: #1a1a1a;
  width: 100%;
  max-width: 600px;
  z-index: 999;

  a {
    color: white;
    font-size: 0.95em;
    text-transform: uppercase;
  }

}

.Home-Header {
  height: 50px;
  margin-bottom: 50px;
  background: #1a1a1a;
  color: white;
}

.product-image {
  img {
    width: 100%;
  }
  padding-bottom: 15px;
}

.align-left {
  text-align: left;
}

.form-check-input {
  margin-right: 10px;
}

.margin-center {
  margin: 0 auto;
}

.error-text {
  color: red;
}
