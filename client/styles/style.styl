  }
}

.categories-container {
  a {
    color: black;
  }
}

.categories-container a:hover {
  text-decoration: none;
}

.category-box {
  border: 1px solid black;
  padding: 70px 0px;
  margin-bottom: 15px;
  font-size: 22px;
  transition: all 0.15s;
}

.category-box:hover {
  background: black;
  color: white;
}

.product-text {
  text-transform: lowercase;
}

.product-title {
  font-weight: bold;
  text-transform: capitalize;
}

.hamburger-menu {
  display: none;
  height: 100%;
  margin-top: 0px;
  background: rgba(0, 0, 0, 0.95);
  width: 100%;
  position: fixed;
  color: white;
  z-index: 9998;
  transition: all 0.3s;

  a {
    color: white;
    font-size: 50px;
    text-transform: uppercase;
  }

  &.is-active {
    display: block;
  }

}



.align-left {
  text-align: left;
}

.form-check-input {
