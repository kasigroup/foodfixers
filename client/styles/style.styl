@import './_*.styl'

@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i|Oswald');

#root {
  text-align: center;
  margin: 0 auto;
  width: 100%;
  color: #1a1a1a;
  font-family: 'Open Sans', sans-serif;
}

html {
  touch-action: manipulation;
}

.title {
  font-size: 3.5em;
  font-family: 'Oswald', sans-serif;
}

a:hover {
  color: white;
}

button:hover {
  cursor: pointer;
}

.align-center {
  text-align: center;
}

.inline-block {
  display: inline-block;
}

.profile-name {
  font-size: 21px;
}

.float-right {
  float:right;
}

.Modal {
  position: absolute;
  padding: 5%;
  max-width: 600px;
  margin: 0 auto;
  top: 60px;
  left: 10px;
  right: 10px;
  bottom: 10px;
  background-color: white;
  transition: all 1s;
  overflow: auto;
  }

.red {
  background: red;
}

.ModalOverlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  transition: background-color 0.1s;
  }

  .ReactModalPortal > * {
      // When the modal is closed, overlay div has no css class
      // This selector should be overridden by the `&--after-open` class below
      opacity: 0;
      transform: scale(1.3);
  }

  .ReactModal__Overlay {
      z-index: 669;
      transition: all 200ms ease-in-out;
      -webkit-transition-delay: 0.5s; /* Safari */
      transition-delay: 0.5s;
      &--after-open {
          opacity: 1;
          transform: scale(1);
      }
      &--before-close {
          opacity: 0;
      }
  }

#main {
